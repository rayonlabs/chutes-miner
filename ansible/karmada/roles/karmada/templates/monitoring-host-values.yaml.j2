---
grafana:
  # Admin credentials
  adminUser: chutes
  adminPassword: "{{ karmada_grafana_password }}"

  service:
    type: NodePort
    nodePort: 30080

  # Data sources configuration
  datasources:
    datasources.yaml:
      apiVersion: 1
      datasources:
        - name: Prometheus
          type: prometheus
          url: http://prometheus 
          access: proxy
          isDefault: true

  # Enable sidecar for dashboard discovery
  sidecar:
    dashboards:
      enabled: true
      label: grafana_dashboard
      searchNamespace: ALL

  # Configure Grafana dashboard providers
  dashboardProviders:
    dashboardproviders.yaml:
      apiVersion: 1
      providers:
        - name: default
          orgId: 1
          folder: ''
          type: file
          disableDeletion: false
          editable: true
          options:
            path: /var/lib/grafana/dashboards/default

  dashboardsConfigMaps:
    default: grafana-dashboards
  
prometheus:
  service:
    type: ClusterIP
  karmadaToken: "{{ api_server_token }}"
  scrape:
    scrapeKarmada: true
  federation:
    enabled: true
    scrapeInterval: '15s'
    matchSelectors:
    - '{job="kubernetes-pods"}'
    - '{job="kubernetes-nodes-cadvisor"}'
    - '{job="node-exporter"}'
    clusters:
{% for host in groups['workers'] %}
    - endpoint: {{ hostvars[host]['ansible_host'] }}:30090
      name: {{ host }}
{% endfor %}